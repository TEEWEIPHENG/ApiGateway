{
  "Routes": [
    //------------------------------------- Login -------------------------------------------
    // # Ping
    {
      "DownstreamPathTemplate": "/Login/Ping",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 44375
        }
      ],
      "UpstreamPathTemplate": "/api/Login/Ping",
      "UpstreamHttpMethod": [ "Get" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "JwtBearer",
        "AllowedScopes": []
      }
    },
    // # Process
    {
      "DownstreamPathTemplate": "/api/Login/Process",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 44375
        }
      ],
      "UpstreamPathTemplate": "/api/Login/Process",
      "UpstreamHttpMethod": [ "POST" ]
      //"ForwardingHeaders": { "Cookie": "" }
    },
    // # Logout
    {
      "DownstreamPathTemplate": "/api/Login/Logout",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 44375
        }
      ],
      "UpstreamPathTemplate": "/api/Login/Logout",
      "UpstreamHttpMethod": [ "POST" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "JwtBearer",
        "AllowedScopes": []
      }
    },

    //------------------------------------- Register -------------------------------------
    {
      "DownstreamPathTemplate": "/api/Register/{everything}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 44375
        }
      ],
      "UpstreamPathTemplate": "/api/Register/{everything}",
      "UpstreamHttpMethod": [ "Get", "Post" ]
    },

    //Chat Service

    {
      "DownstreamPathTemplate": "/api/Chat/{everything}",
      "DownstreamScheme": "https",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 44375
        }
      ],
      "UpstreamPathTemplate": "/api/Chat/{everything}",
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "JwtBearer",
        "AllowedScopes": []
      },
      "UpstreamHttpMethod": [ "Get", "Post" ]
    }
  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5000"
  }
}