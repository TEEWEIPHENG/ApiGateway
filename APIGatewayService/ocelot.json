{
  "Routes": [
    //------------------------------------- Login -------------------------------------------
    // # Ping
    {
      "DownstreamPathTemplate": "/Login/Ping",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5001
        }
      ],
      "UpstreamPathTemplate": "/api/Login/Ping",
      "UpstreamHttpMethod": [ "Get" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "JwtBearer",
        "AllowedScopes": []
      }
    },
    // # Process
    {
      "DownstreamPathTemplate": "/api/Login/Process",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5001
        }
      ],
      "UpstreamPathTemplate": "/api/Login/Process",
      "UpstreamHttpMethod": [ "POST" ]
    },
    // # Logout
    {
      "DownstreamPathTemplate": "/api/Login/Logout",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5001
        }
      ],
      "UpstreamPathTemplate": "/api/Login/Logout",
      "UpstreamHttpMethod": [ "POST" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "JwtBearer",
        "AllowedScopes": []
      }
    },

    // # GetUserInfo
    {
      "DownstreamPathTemplate": "/api/Login/GetUserInfo",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5001
        }
      ],
      "UpstreamPathTemplate": "/api/Login/GetUserInfo",
      "UpstreamHttpMethod": [ "GET" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "JwtBearer",
        "AllowedScopes": []
      },
      "AddHeadersToRequest": {
        "x-user-id": "Claims[http://schemas.xmlsoap.org/ws/2005/05/identity/claims/nameidentifier] > value[0] > |"
      }
    },
    //------------------------------------- Register -------------------------------------
    {
      "DownstreamPathTemplate": "/api/Register/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5001
        }
      ],
      "UpstreamPathTemplate": "/api/Register/{everything}",
      "UpstreamHttpMethod": [ "Get", "Post" ]
    },

    //------------------------------------- Chat Service -------------------------------------

    {
      "DownstreamPathTemplate": "/api/Chat/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5002
        }
      ],
      "UpstreamPathTemplate": "/api/Chat/{everything}",
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "JwtBearer",
        "AllowedScopes": []
      },
      "UpstreamHttpMethod": [ "Get", "Post" ]
    },

    //------------------------------------- Friend Service -------------------------------------
    {
      "DownstreamPathTemplate": "/api/Friend/{everything}",
      "DownstreamScheme": "http",
      "DownstreamHostAndPorts": [
        {
          "Host": "localhost",
          "Port": 5002
        }
      ],
      "UpstreamPathTemplate": "/api/Friend/{everything}",
      "UpstreamHttpMethod": [ "GET", "POST" ],
      "AuthenticationOptions": {
        "AuthenticationProviderKey": "JwtBearer",
        "AllowedScopes": []
      },
      "AddHeadersToRequest": {
        "x-user-id": "Claims[http://schemas.xmlsoap.org/ws/2005/05/identity/claims/nameidentifier] > value[0] > |",
        "x-user-name": "Claims[http://schemas.xmlsoap.org/ws/2005/05/identity/claims/name] > value[0] > |",
        "x-user-role": "Claims[http://schemas.microsoft.com/ws/2008/06/identity/claims/role] > value[0] > |"
      }
    }

  ],
  "GlobalConfiguration": {
    "BaseUrl": "http://localhost:5000"
  }
}